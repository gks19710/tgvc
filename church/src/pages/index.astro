---
import Layout from '../layouts/Layout.astro';
import { siteContent } from '../content.js';
---

<Layout title="Irvine Restore Church">
  <!-- Hero Section -->
  <section class="relative h-screen bg-cover bg-center bg-no-repeat" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1441974231531-c6227db76b6e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2071&q=80')">
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="text-center text-white px-4">
        <!-- Korean Church Name -->
        <div class="mb-8">
          <h2 class="text-4xl md:text-6xl font-light text-right mb-4 text-white korean-text">
            {siteContent.churchNameKorean}
          </h2>
        </div>
        
        <!-- Main Hero Text -->
        <div class="space-y-2 md:space-y-4 text-left max-w-2xl korean-text">
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-light text-orange-400 leading-tight">
            {siteContent.hero.title}
          </h1>
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-light text-orange-400 leading-tight">
            {siteContent.hero.subtitle}
          </h1>
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-light text-white leading-tight">
            {siteContent.hero.description}
          </h1>
        </div>
      </div>
    </div>
  </section>

  <!-- Bible Verse Section -->
  <section class="bg-gray-50 py-20">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <!-- Icon -->
      <div class="mb-8">
        <div class="w-20 h-20 mx-auto bg-orange-400 rounded-full flex items-center justify-center">
          <svg width="40" height="40" viewBox="0 0 40 40" class="text-white">
            <!-- Fish and waves icon -->
            <ellipse cx="20" cy="15" rx="12" ry="6" fill="none" stroke="currentColor" stroke-width="2"/>
            <path d="M8 15 Q20 10 32 15" stroke="currentColor" stroke-width="1" fill="none"/>
            <path d="M8 20 Q20 15 32 20" stroke="currentColor" stroke-width="1" fill="none"/>
            <path d="M8 25 Q20 20 32 25" stroke="currentColor" stroke-width="1" fill="none"/>
            <circle cx="16" cy="13" r="1.5" fill="currentColor"/>
          </svg>
        </div>
      </div>
      
      <!-- Bible Verse -->
      <div class="space-y-6">
        <h2 class="text-3xl md:text-4xl font-light text-teal-800 leading-relaxed">
          {siteContent.verse.english}
        </h2>
        
        <p class="text-xl text-orange-500 font-medium korean-text">
          {siteContent.verse.korean}
        </p>
        
        <p class="text-lg text-orange-400 font-medium">
          {siteContent.verse.reference}
        </p>
      </div>
    </div>
  </section>

  <!-- Church Schedule Section -->
  <section class="relative py-20 bg-cover bg-center" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1441974231531-c6227db76b6e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2071&q=80')">
    <div class="max-w-4xl mx-auto px-4 text-center text-white">
      <!-- Korean Church Name -->
      <div class="mb-12">
        <h2 class="text-4xl md:text-5xl font-light text-right korean-text">
          {siteContent.churchNameKorean}
        </h2>
      </div>
      
      <!-- Icon -->
      <div class="mb-8">
        <div class="w-20 h-20 mx-auto bg-orange-400 rounded-full flex items-center justify-center">
          <svg width="40" height="40" viewBox="0 0 40 40" class="text-white">
            <!-- Bible and cross icon -->
            <rect x="10" y="12" width="20" height="16" rx="2" fill="none" stroke="currentColor" stroke-width="2"/>
            <path d="M15 8 L15 12 M25 8 L25 12" stroke="currentColor" stroke-width="2"/>
            <path d="M18 20 L22 20 M20 18 L20 22" stroke="currentColor" stroke-width="2"/>
          </svg>
        </div>
      </div>
      
      <!-- Schedule Title -->
      <h2 class="text-4xl font-light text-teal-200 mb-12">
        {siteContent.schedule.title}
      </h2>
      
      <!-- Worship Schedule -->
      <div class="space-y-8">
        <div class="flex flex-col md:flex-row justify-center items-center md:space-x-16 space-y-4 md:space-y-0">
          <div class="text-center">
            <h3 class="text-3xl font-light text-orange-400 mb-2">
              {siteContent.schedule.worship.title}
            </h3>
            <p class="text-lg text-gray-300 korean-text">
              {siteContent.schedule.worship.korean}
            </p>
          </div>
          
          <div class="text-center">
            <h3 class="text-5xl font-light text-orange-400 mb-2">
              {siteContent.schedule.worship.time}
            </h3>
            <p class="text-lg text-gray-300">
              {siteContent.schedule.worship.day}
            </p>
          </div>
        </div>
        
        <!-- Note -->
        <div class="mt-12">
          <p class="text-sm text-red-300 korean-text">
            {siteContent.schedule.note}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Support Section -->
  <section class="relative py-20 bg-cover bg-center" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(139, 69, 19, 0.3)), url('https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80')">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <!-- Support Card -->
      <div class="bg-white bg-opacity-95 rounded-lg p-12 shadow-2xl max-w-2xl mx-auto">
        <h2 class="text-4xl font-light text-teal-800 mb-8">
          {siteContent.support.title}
        </h2>
        
        <div class="space-y-6 mb-8">
          <p class="text-lg text-gray-700 leading-relaxed korean-text">
            {siteContent.support.description}
          </p>
          <p class="text-sm text-red-600 korean-text">
            {siteContent.support.subdescription}
          </p>
        </div>
        
        <button class="bg-orange-500 hover:bg-orange-600 text-white px-8 py-3 rounded font-medium transition-colors">
          {siteContent.support.buttonText}
        </button>
      </div>
    </div>
    
    <!-- Footer Logo -->
    <div class="absolute bottom-8 left-8">
      <svg width="80" height="40" viewBox="0 0 120 60" class="text-orange-400">
        <path d="M20 35 Q60 15 100 35 Q80 45 60 45 Q40 45 20 35 Z" fill="currentColor"/>
        <path d="M58 25 L62 25 L60 35 Z" fill="currentColor"/>
      </svg>
    </div>
    
    <!-- Contact Info -->
    <div class="absolute bottom-8 right-8 text-orange-400 text-sm">
      <p>{siteContent.email} / {siteContent.phone}</p>
    </div>
  </section>
</Layout>