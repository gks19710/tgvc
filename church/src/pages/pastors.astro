---
import Layout from '../layouts/Layout.astro';
import { siteContent } from '../content.js';
---

<Layout title={`${siteContent.pastors.title} - ${siteContent.siteName}`}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-teal-800 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-light text-orange-400 mb-4">
        {siteContent.pastors.title}
      </h1>
      <p class="text-xl korean-text text-teal-200">
        {siteContent.pastors.subtitle}
      </p>
    </div>
  </section>

  <!-- Introduction Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <!-- Icon -->
      <div class="w-20 h-20 mx-auto bg-orange-400 rounded-full flex items-center justify-center mb-8">
        <svg width="40" height="40" viewBox="0 0 40 40" class="text-white">
          <!-- Pastor/Leadership icon -->
          <circle cx="20" cy="12" r="6" fill="none" stroke="currentColor" stroke-width="2"/>
          <path d="M8 32 Q8 24 20 24 Q32 24 32 32" stroke="currentColor" stroke-width="2" fill="none"/>
          <path d="M15 20 L25 20" stroke="currentColor" stroke-width="2"/>
        </svg>
      </div>
      
      <div class="max-w-2xl mx-auto">
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
          {siteContent.pastors.intro}
        </p>
        <p class="text-lg text-gray-700 leading-relaxed korean-text">
          {siteContent.pastors.introKorean}
        </p>
      </div>
    </div>
  </section>

  <!-- Pastor Profile Section -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      <div class="bg-gray-50 rounded-lg shadow-lg overflow-hidden">
        <div class="md:flex">
          <!-- Pastor Photo Placeholder -->
          <div class="md:w-1/3 bg-teal-600 flex items-center justify-center p-12">
            <div class="w-32 h-32 bg-teal-700 rounded-full flex items-center justify-center">
              <svg width="80" height="80" viewBox="0 0 80 80" class="text-teal-300">
                <circle cx="40" cy="25" r="12" fill="currentColor"/>
                <path d="M15 65 Q15 45 40 45 Q65 45 65 65" fill="currentColor"/>
              </svg>
            </div>
          </div>
          
          <!-- Pastor Info -->
          <div class="md:w-2/3 p-8">
            <div class="mb-6">
              <h2 class="text-3xl font-light text-teal-800 mb-2">
                {siteContent.pastors.leadPastor.name}
              </h2>
              <p class="text-xl korean-text text-orange-500 mb-2">
                {siteContent.pastors.leadPastor.nameKorean}
              </p>
              <p class="text-lg text-gray-600">
                {siteContent.pastors.leadPastor.title}
              </p>
              <p class="text-lg korean-text text-gray-600">
                {siteContent.pastors.leadPastor.titleKorean}
              </p>
            </div>
            
            <div class="space-y-4">
              <p class="text-gray-700 leading-relaxed">
                {siteContent.pastors.leadPastor.bio}
              </p>
              <p class="text-gray-700 leading-relaxed korean-text">
                {siteContent.pastors.leadPastor.bioKorean}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Pastor Section -->
  <section class="relative py-20 bg-cover bg-center" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80')">
    <div class="max-w-4xl mx-auto px-4 text-center text-white">
      <h2 class="text-3xl md:text-4xl font-light mb-6">
        Connect With Our Pastoral Team
      </h2>
      <p class="text-xl korean-text mb-8">
        목회팀과 연결하세요
      </p>
      
      <div class="bg-white bg-opacity-95 rounded-lg p-8 max-w-md mx-auto">
        <p class="text-gray-700 mb-4">
          We'd love to hear from you and answer any questions you may have.
        </p>
        <p class="text-gray-700 korean-text mb-6">
          여러분의 연락을 기다리며 궁금한 점이 있으시면 언제든 문의해 주세요.
        </p>
        
        <div class="space-y-2 text-teal-800">
          <p class="font-medium">{siteContent.email}</p>
          <p class="font-medium">{siteContent.phone}</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
