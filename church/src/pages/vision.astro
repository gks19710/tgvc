---
import Layout from '../layouts/Layout.astro';
import { siteContent } from '../content.js';
---

<Layout title={`${siteContent.vision.title} - ${siteContent.siteName}`}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-teal-800 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-light text-orange-400 mb-4">
        {siteContent.vision.title}
      </h1>
      <p class="text-xl korean-text text-teal-200">
        {siteContent.vision.subtitle}
      </p>
    </div>
  </section>

  <!-- Vision Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <!-- Icon -->
      <div class="text-center mb-12">
        <div class="w-20 h-20 mx-auto bg-orange-400 rounded-full flex items-center justify-center mb-6">
          <svg width="40" height="40" viewBox="0 0 40 40" class="text-white">
            <!-- Vision/Eye icon -->
            <circle cx="20" cy="20" r="12" fill="none" stroke="currentColor" stroke-width="2"/>
            <circle cx="20" cy="20" r="6" fill="none" stroke="currentColor" stroke-width="2"/>
            <circle cx="20" cy="20" r="2" fill="currentColor"/>
          </svg>
        </div>
        
        <h2 class="text-3xl font-light text-teal-800 mb-4">
          {siteContent.vision.vision.title}
        </h2>
        <p class="text-xl korean-text text-orange-500 mb-8">
          {siteContent.vision.vision.korean}
        </p>
      </div>
      
      <!-- Vision Content -->
      <div class="bg-white rounded-lg shadow-lg p-8 mb-12">
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
          {siteContent.vision.vision.content}
        </p>
        <p class="text-lg text-gray-700 leading-relaxed korean-text">
          {siteContent.vision.vision.contentKorean}
        </p>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      <!-- Icon -->
      <div class="text-center mb-12">
        <div class="w-20 h-20 mx-auto bg-teal-600 rounded-full flex items-center justify-center mb-6">
          <svg width="40" height="40" viewBox="0 0 40 40" class="text-white">
            <!-- Mission/Hands icon -->
            <path d="M10 25 Q15 20 20 25 Q25 20 30 25" stroke="currentColor" stroke-width="2" fill="none"/>
            <path d="M12 28 Q17 23 22 28 Q27 23 32 28" stroke="currentColor" stroke-width="2" fill="none"/>
            <circle cx="20" cy="15" r="3" fill="currentColor"/>
          </svg>
        </div>
        
        <h2 class="text-3xl font-light text-teal-800 mb-4">
          {siteContent.vision.mission.title}
        </h2>
        <p class="text-xl korean-text text-orange-500 mb-8">
          {siteContent.vision.mission.korean}
        </p>
      </div>
      
      <!-- Mission Content -->
      <div class="bg-gray-50 rounded-lg shadow-lg p-8">
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
          {siteContent.vision.mission.content}
        </p>
        <p class="text-lg text-gray-700 leading-relaxed korean-text">
          {siteContent.vision.mission.contentKorean}
        </p>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="relative py-20 bg-cover bg-center" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1441974231531-c6227db76b6e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2071&q=80')">
    <div class="max-w-4xl mx-auto px-4 text-center text-white">
      <h2 class="text-3xl md:text-4xl font-light mb-6">
        Join Us in Our Mission
      </h2>
      <p class="text-xl korean-text mb-8">
        우리의 사명에 함께하세요
      </p>
      <p class="text-lg leading-relaxed max-w-2xl mx-auto">
        We invite you to be part of our church family and experience the restoration and healing that comes through God's love.
      </p>
    </div>
  </section>
</Layout>
