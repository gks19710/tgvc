---
import Layout from '../layouts/Layout.astro';
import { siteContent } from '../content.js';
---

<Layout title={`${siteContent.news.title} - ${siteContent.siteName}`}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-teal-800 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-light text-orange-400 mb-4">
        {siteContent.news.title}
      </h1>
      <p class="text-xl korean-text text-teal-200">
        {siteContent.news.subtitle}
      </p>
    </div>
  </section>

  <!-- Upcoming Events Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-12">
        <!-- Icon -->
        <div class="w-20 h-20 mx-auto bg-orange-400 rounded-full flex items-center justify-center mb-6">
          <svg width="40" height="40" viewBox="0 0 40 40" class="text-white">
            <!-- Calendar icon -->
            <rect x="8" y="10" width="24" height="20" rx="2" fill="none" stroke="currentColor" stroke-width="2"/>
            <path d="M16 6 L16 14 M24 6 L24 14" stroke="currentColor" stroke-width="2"/>
            <path d="M8 18 L32 18" stroke="currentColor" stroke-width="1"/>
            <circle cx="14" cy="22" r="1" fill="currentColor"/>
            <circle cx="20" cy="22" r="1" fill="currentColor"/>
            <circle cx="26" cy="22" r="1" fill="currentColor"/>
            <circle cx="14" cy="26" r="1" fill="currentColor"/>
            <circle cx="20" cy="26" r="1" fill="currentColor"/>
          </svg>
        </div>
        
        <h2 class="text-3xl font-light text-teal-800 mb-4">
          {siteContent.news.upcoming.title}
        </h2>
        <p class="text-xl korean-text text-orange-500">
          {siteContent.news.upcoming.korean}
        </p>
      </div>
      
      <!-- No Events Message -->
      <div class="bg-white rounded-lg shadow-lg p-8 text-center">
        <p class="text-lg text-gray-700 mb-4">
          {siteContent.news.upcoming.noEvents}
        </p>
        <p class="text-lg text-gray-700 korean-text">
          {siteContent.news.upcoming.noEventsKorean}
        </p>
      </div>
    </div>
  </section>

  <!-- Church Announcements Section -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-12">
        <!-- Icon -->
        <div class="w-20 h-20 mx-auto bg-teal-600 rounded-full flex items-center justify-center mb-6">
          <svg width="40" height="40" viewBox="0 0 40 40" class="text-white">
            <!-- Announcement/Megaphone icon -->
            <path d="M8 15 L25 10 L25 30 L8 25 Z" fill="currentColor"/>
            <path d="M25 15 Q30 15 30 20 Q30 25 25 25" stroke="currentColor" stroke-width="2" fill="none"/>
            <circle cx="12" cy="20" r="2" fill="white"/>
          </svg>
        </div>
        
        <h2 class="text-3xl font-light text-teal-800 mb-4">
          {siteContent.news.announcements.title}
        </h2>
        <p class="text-xl korean-text text-orange-500">
          {siteContent.news.announcements.korean}
        </p>
      </div>
      
      <!-- Announcements Content -->
      <div class="bg-gray-50 rounded-lg shadow-lg p-8">
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
          {siteContent.news.announcements.content}
        </p>
        <p class="text-lg text-gray-700 leading-relaxed korean-text">
          {siteContent.news.announcements.contentKorean}
        </p>
      </div>
    </div>
  </section>

  <!-- Weekly Schedule Reminder -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-light text-teal-800 mb-4">
          Weekly Schedule
        </h2>
        <p class="text-xl korean-text text-orange-500">
          주간 일정
        </p>
      </div>
      
      <!-- Schedule Cards -->
      <div class="grid md:grid-cols-2 gap-6">
        <!-- Sunday Worship -->
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-orange-400 rounded-full flex items-center justify-center mr-4">
              <svg width="24" height="24" viewBox="0 0 24 24" class="text-white">
                <path d="M12 2 L15 9 L22 9 L17 14 L19 21 L12 17 L5 21 L7 14 L2 9 L9 9 Z" fill="currentColor"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-medium text-teal-800">Sunday Worship</h3>
              <p class="korean-text text-gray-600">주일 예배</p>
            </div>
          </div>
          <p class="text-2xl font-light text-orange-500 mb-2">11:00 AM</p>
          <p class="text-gray-600">Every Sunday</p>
        </div>
        
        <!-- Contact Info -->
        <div class="bg-teal-800 text-white rounded-lg shadow-lg p-6">
          <h3 class="text-xl font-medium mb-4">Contact Us</h3>
          <p class="korean-text mb-4">연락처</p>
          <div class="space-y-2">
            <p>{siteContent.email}</p>
            <p>{siteContent.phone}</p>
          </div>
          <p class="text-sm text-teal-200 mt-4 korean-text">
            {siteContent.schedule.note}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Stay Connected Section -->
  <section class="relative py-20 bg-cover bg-center" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80')">
    <div class="max-w-4xl mx-auto px-4 text-center text-white">
      <h2 class="text-3xl md:text-4xl font-light mb-6">
        Stay Connected
      </h2>
      <p class="text-xl korean-text mb-8">
        연결되어 있으세요
      </p>
      <p class="text-lg leading-relaxed max-w-2xl mx-auto">
        Follow us for the latest updates, announcements, and upcoming events. We want to keep you informed about all the ways you can connect and grow with our church family.
      </p>
    </div>
  </section>
</Layout>
